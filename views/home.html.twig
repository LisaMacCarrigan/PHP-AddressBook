<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
        <title>Address Book</title>
    </head>
    <body>
        <div class="container">
            <h1>Contacts</h1>
            {% if list_of_contacts is not empty %}
                {% for new_contact in list_of_contacts %}
                    <li> {{new_contact.getLastName}}, {{new_contact.getFirstName}} </li>
                {% endfor %}
            {% endif %}

            <form action="/create_contact" method="post">
                <h3>Add New Contact</h3>
                <div class="form-group">
                    <label for="first_name">First Name:</label>
                    <input id="first_name" name="first_name" class="form-control" type="text" placeholder="Enter first name">
                </div>
                <div class="form-group">
                    <label for="last_name">Last Name:</label>
                    <input id="last_name" name="last_name" class="form-control" type="text" placeholder="Enter last name">
                </div>
                <div class="form-group">
                    <label for="phone_number">Phone Number:</label>
                    <input id="phone_number" name="phone_number" class="form-control" type="text" placeholder="1112223333">
                </div>
                <div class="form-group">
                    <label for="street">Street:</label>
                    <input id="street" name="street" class="form-control" type="text" placeholder="215 Programmer Drive">
                </div>
                <div class="form-group">
                    <label for="city">City:</label>
                    <input id="city" name="city" class="form-control" type="text" placeholder="Philadelphia">
                </div>
                <div class="form-group">
                    <label for="state">State:</label>
                    <input id="state" name="state" class="form-control" type="text" placeholder="PA">
                </div>
                <div class="form-group">
                    <label for="zipcode">Zipcode:</label>
                    <input id="zipcode" name="zipcode" class="form-control" type="number" placeholder="19122">
                </div>
                <button type="submit" class="btn btn-success">Add</button>
            </form>
            <br>
            <form action="/delete_contacts" method="post">
                <button type="submit" class="btn btn-warning">Delete All</button>
            </form>
        </div>
    </body>
</html>
